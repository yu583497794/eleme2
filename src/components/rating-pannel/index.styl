@import '~common/stylus/variable'
.rating-editor-wrapper
  position relative
  margin-bottom 2vw
  .rating-star-wrapper
    .rating-star-item
      display flex
      align-items center
      .rating-star-label
        margin-right 2vw
  .rating-submit-btn
    margin-top: 5px;
    background: $color-theme;
    outline: none;
    border: none;
    padding: 5px;
  .filter-level
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    display flex
    align-items center
    justify-content center